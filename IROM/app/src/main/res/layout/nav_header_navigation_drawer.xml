<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:weightSum="1">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/nav_bar_logo"
            android:layout_width="135dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:adjustViewBounds="false"
            android:baselineAlignBottom="false"
            android:contentDescription="user profile picture"
            android:cropToPadding="false"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/irom_logo_placeholder_360x180"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/nav_header_user_email"
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/nav_bar_header_profile_pic"
            android:text="Image Recognition Online Marketplace"
            tools:layout_editor_absoluteX="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/nav_bar_logo" />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@drawable/a12633702"
            android:id="@+id/nav_bar_header_profile_pic"
            android:paddingEnd="2dp"
            app:layout_constraintTop_toBottomOf="@+id/nav_bar_logo"
            app:layout_constraintRight_toLeftOf="@+id/nav_header_user_email"
            android:layout_marginTop="-14dp"
            tools:layout_editor_absoluteY="95dp"
            android:layout_marginBottom="0dp" />
        <!--<TextView-->
            <!--android:id="@+id/nav_header_user_name"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:paddingTop="@dimen/nav_header_vertical_spacing"-->
            <!--android:text="IROM"-->
            <!--app:layout_constraintLeft_toLeftOf="parent"-->
            <!--android:paddingStart="8dp"-->
            <!--android:paddingEnd="8dp"-->
            <!--android:textAppearance="@style/TextAppearance.AppCompat.Body1"-->
            <!--tools:layout_editor_absoluteX="8dp"-->
            <!--app:layout_constraintTop_toBottomOf="@+id/nav_header_user_email" />-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nav_bar_first_name"
            app:layout_constraintTop_toBottomOf="@+id/nav_header_user_email"
            app:layout_constraintStart_toStartOf="@+id/nav_header_user_email"
            app:layout_constraintRight_toLeftOf="@+id/nav_bar_last_name"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="first"
            android:layout_marginTop="-4dp"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/nav_header_user_email" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nav_bar_last_name"
            app:layout_constraintTop_toBottomOf="@+id/nav_header_user_email"
            app:layout_constraintLeft_toRightOf="@+id/nav_bar_first_name"
            android:text="last"/>

    </android.support.constraint.ConstraintLayout>

</LinearLayout>
