<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="0dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:weightSum="1">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp">

        <ImageView
            android:id="@+id/nav_bar_logo"
            android:layout_width="135dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:adjustViewBounds="false"
            android:baselineAlignBottom="false"
            android:contentDescription="user profile picture"
            android:cropToPadding="false"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:scaleType="fitXY"
            app:layout_constraintLeft_toRightOf="@+id/nav_bar_header_profile_pic"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/irom_logo_placeholder_360x180" />

        <TextView
            android:id="@+id/nav_header_user_email"
            android:layout_width="258dp"
            android:layout_height="22dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:text="email"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/nav_bar_header_profile_pic"
            app:layout_constraintTop_toBottomOf="@+id/nav_bar_name"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/nav_bar_header_profile_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:paddingEnd="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/nav_header_user_email"
            app:srcCompat="@drawable/a12633702" />
        <!--<TextView-->
        <!--android:id="@+id/nav_header_user_name"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:paddingTop="@dimen/nav_header_vertical_spacing"-->
        <!--android:text="IROM"-->
        <!--app:layout_constraintLeft_toLeftOf="parent"-->
        <!--android:paddingStart="8dp"-->
        <!--android:paddingEnd="8dp"-->
        <!--android:textAppearance="@style/TextAppearance.AppCompat.Body1"-->
        <!--tools:layout_editor_absoluteX="8dp"-->
        <!--app:layout_constraintTop_toBottomOf="@+id/nav_header_user_email" />-->
        <TextView
            android:id="@+id/nav_bar_name"
            android:layout_width="148dp"
            android:layout_height="25dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="19dp"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:text="fistname lastame"
            app:layout_constraintLeft_toRightOf="@+id/nav_bar_header_profile_pic"
            app:layout_constraintStart_toStartOf="@+id/nav_header_user_email"
            app:layout_constraintTop_toBottomOf="@+id/nav_bar_logo" />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>
