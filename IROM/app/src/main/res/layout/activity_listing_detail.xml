<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?android:actionBarSize">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/listing_detail_image"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/a12633702" />

        <TextView
            android:id="@+id/listing_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/listing_detail_image"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="12dp"
            android:text="Name" />

        <TextView
            android:id="@+id/listing_detail_creator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/listing_detail_name"
            android:layout_below="@+id/listing_detail_name"
            android:layout_marginTop="5dp"
            android:text="Creator" />

        <TextView
            android:id="@+id/listing_detail_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/listing_detail_creator"
            android:layout_below="@+id/listing_detail_creator"
            android:layout_marginTop="5dp"
            android:text="Description" />

        <TextView
            android:id="@+id/listing_detail_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/listing_detail_name"
            android:layout_marginEnd="5dp"
            android:text="Price" />

        <Button
            android:id="@+id/listing_detail_purchase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Purchase"
            android:layout_below="@+id/listing_detail_image"
            android:layout_toStartOf="@+id/listing_detail_price"
            android:layout_marginEnd="5dp" />

    </RelativeLayout>

</ScrollView>