<?xml version="1.0" encoding="utf-8"?>
<!--THIS IS THE SPECIFIC LAYOUT OF AN ITEM THAT WILL BE REPEATED FOR AN INVENTORY LIST-->
<!--This layout will be used as a format per item for the adaptor-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="forSale"
        android:id="@+id/item_list_item_forSale"
        android:layout_row="1"
        android:layout_column="3"
        android:layout_below="@+id/item_list_item_quantity"
        android:layout_alignEnd="@+id/item_list_item_quantity" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="quantity"
        android:id="@+id/item_list_item_quantity"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_below="@+id/item_list_item_name"
        android:layout_alignEnd="@+id/item_list_item_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="item name"
        android:id="@+id/item_list_item_name"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView4" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="83dp"
        android:src="@drawable/a12633702"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/item_list_item_picture"/>

</RelativeLayout>